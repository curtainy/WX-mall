/* 轮播图 */
 .swiper{
   width: 100%;
   /* height: 150rpx; */
   white-space: nowrap;
 }
 .swiper_item image{
   width: 100%;
 }

 /* 推荐 */
 .recommend{
   width: 100%;
   display: flex;
   justify-content: space-around;
   border-bottom: 15rpx solid beige;
 }
 .recom_item{
   flex: 1;
   padding: 25rpx;
   text-align: center;
 }
 .recom_item image{
   width: 100%;
 }
 .recom_item view{
   font-size: 25rpx;
 }


 /* 本周流行 */
 .pop{
   width: 100%;
 }
 .pop image{
   width: 100%;
 }

/* tab_constrol */
.stay_tab{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
}

 /* 商品展示 */
 .show{
   width: 100%;
   display: flex;
   flex-wrap: wrap;
   justify-content: space-around;
 }
 .show_item{
   width: 48%;
 }