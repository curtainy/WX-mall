.tab{
  display: flex;
  width: 100%;
  height: 60rpx;
  white-space: nowrap;
  padding-bottom: 10rpx;
  background-color: #fff;
  margin-bottom: 20rpx
}

.tab_item{
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  line-height: 60rpx;
}

.tab_item text{
  padding: 5rpx;
  padding-bottom: 10rpx;
}

.active{
  color: #ff5777;
  border-bottom: 3rpx solid #ff5777;
}